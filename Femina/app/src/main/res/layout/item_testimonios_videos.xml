<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="#f8f8f8"
    app:cardCornerRadius="8dp">

<RelativeLayout

    android:layout_width="match_parent"
android:layout_height="270dp">
    <TextView
        android:id="@+id/txt_idvideo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_url"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_idCategoria"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/txtTituloVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:text="TituloVdeo"
        android:textStyle="bold|italic"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtCatVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="29dp"
        android:textStyle="italic"
        android:text="CatVideo"
        android:textColor="@android:color/black"
        android:textSize="14sp" />


    <WebView
        android:id="@+id/videoWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@+id/txtCatVideo">

    </WebView>

    <Button
        android:id="@+id/fullscreen"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorTransparente"
        android:text="[    ]"
        android:textStyle="bold" />
</RelativeLayout>
    </androidx.cardview.widget.CardView>