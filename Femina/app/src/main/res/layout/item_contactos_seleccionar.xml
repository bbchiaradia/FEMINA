<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/icono_persona_sel"
        android:layout_width="68dp"
        android:layout_height="53dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:padding="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/contacto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_nombre_contacto_sel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="italic"
        android:text="@string/nombredospuntos"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="@id/icono_persona_sel"
        app:layout_constraintStart_toEndOf="@id/icono_persona_sel" />

    <TextView
        android:id="@+id/txt_numero_contacto_sel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="italic"
        android:text="@string/telefonodospuntos"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@id/icono_persona_sel"
        app:layout_constraintTop_toBottomOf="@id/txt_nombre_contacto_sel"/>


</androidx.constraintlayout.widget.ConstraintLayout>