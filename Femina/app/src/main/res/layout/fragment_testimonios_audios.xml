<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/fondo_pantallas"
android:orientation="vertical"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@drawable/marco_redondo"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <Spinner
        android:id="@+id/spn_categoria_aud"
        android:layout_width="match_parent"
        android:popupBackground="@color/fondo_pantallas"
        android:spinnerMode="dropdown"
        android:layout_height="50dp"/>

</LinearLayout>

<TextView
    android:id="@+id/no_hay_audios"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="9dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="12dp"
    android:text="No hay Audios Cargados"
    android:textSize="16dp"
    android:textStyle="italic"
    android:visibility="gone" />

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerView_audio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp"/>

</LinearLayout>
