<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/background_dark"
    android:backgroundTint="#EFE6E6"><![CDATA[
    android:background="@color/fondo_pantallas">

    ]]>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:background="@drawable/prueba"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints" />

        <ListView
            android:id="@+id/lvlPreguntas"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="-15dp"
            tools:layout_editor_absoluteY="524dp"
            tools:visibility="invisible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16dp"
        android:fontFamily="cursive"
        android:text="@string/menu_mis_datos"
        android:textColor="#403C3C"
        android:textSize="30sp"
        android:textStyle="bold" />

        android:text="@string/menu_ayuda_test_violencia"
        android:textColor="#403C3C"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="357dp"
            android:layout_height="172dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/menu_testViolencia_test_violencia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txtResultadoTestUsuario"
            android:layout_width="365dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="11dp"
            android:textStyle="bold"

            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:ignore="MissingConstraints"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_marginTop="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:background="@drawable/marco_redondo">

            <Spinner
                android:id="@+id/sp_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dropDownWidth="match_parent"
                android:layout_gravity="center"
                android:popupBackground="@color/fondo_pantallas"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <Button
            android:id="@+id/btnEmpezarTest"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/boton_rosa"
            android:text="Empezar Test" />



    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>